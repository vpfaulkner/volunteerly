<h1>Assignments</h1>

<table border="1">
  <thead>
    <tr>
      <th>Date</th>
      <th>Assignment</th>
    </tr>
  </thead>

  <% @assignments_by_sunday.each do |sunday, assignment| %>
    <tr>
      <td><%= sunday %></td>
      <td><%= assignment.last.try(:team).try(:name) %></td>
    </tr>
  <% end -%>
</table>

<p><%= link_to 'New Assignment', new_assignment_path %></p>
